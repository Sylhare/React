{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "jsx": "react",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules"
  ]
}
